<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Layout.Catamaran.Screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with back button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="â† Back"
                style="@style/Button.Catamaran.Secondary"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Need Help?"
                android:textAppearance="@style/TextAppearance.Catamaran.Headline"
                android:gravity="center" />

        </LinearLayout>

        <!-- Quick Help Options -->
        <androidx.cardview.widget.CardView
            style="@style/Card.Catamaran">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ†˜ Get Help Right Now"
                    android:textAppearance="@style/TextAppearance.Catamaran.Title"
                    android:layout_marginBottom="20dp" />

                <Button
                    android:id="@+id/btn_call_support"
                    style="@style/Button.Catamaran.Primary"
                    android:layout_width="match_parent"
                    android:text="ðŸ“ž Call Catamaran Support"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btn_family_help"
                    style="@style/Button.Catamaran.Secondary"
                    android:layout_width="match_parent"
                    android:text="ðŸ‘¨â€ðŸ‘©â€ðŸ‘§â€ðŸ‘¦ Contact My Family"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btn_email_support"
                    style="@style/Button.Catamaran.Secondary"
                    android:layout_width="match_parent"
                    android:text="âœ‰ï¸ Send Email for Help" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Common Questions -->
        <androidx.cardview.widget.CardView
            style="@style/Card.Catamaran">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â“ Common Questions"
                    android:textAppearance="@style/TextAppearance.Catamaran.Title"
                    android:layout_marginBottom="20dp" />

                <!-- Q&A Items -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Q: What does Catamaran do?"
                    android:textAppearance="@style/TextAppearance.Catamaran.Body"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A: Catamaran helps protect you from phone scams by watching for suspicious calls and messages. It shares activity summaries with your family so they know you're safe."
                    android:textAppearance="@style/TextAppearance.Catamaran.Body"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Q: Does Catamaran read my messages?"
                    android:textAppearance="@style/TextAppearance.Catamaran.Body"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A: NO! Catamaran NEVER reads your text messages. It only counts how many messages you receive to spot unusual patterns. Your privacy is completely protected."
                    android:textAppearance="@style/TextAppearance.Catamaran.Body"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Q: How do I turn off Family Watch?"
                    android:textAppearance="@style/TextAppearance.Catamaran.Body"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A: Go to Settings and turn off the 'Family Watch' switch. You can also remove individual family members or turn off everything completely."
                    android:textAppearance="@style/TextAppearance.Catamaran.Body"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Q: What if I get a suspicious call?"
                    android:textAppearance="@style/TextAppearance.Catamaran.Body"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A: Don't give any personal information. Hang up and call the company directly using a number you find yourself. Catamaran will alert your family if it detects suspicious activity."
                    android:textAppearance="@style/TextAppearance.Catamaran.Body"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- App Info -->
        <androidx.cardview.widget.CardView
            style="@style/Card.Catamaran">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
