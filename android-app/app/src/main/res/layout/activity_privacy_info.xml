<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Layout.Catamaran.Screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with back button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="← Back"
                style="@style/Button.Catamaran.Secondary"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Your Privacy"
                android:textAppearance="@style/TextAppearance.Catamaran.Headline"
                android:gravity="center" />

        </LinearLayout>

        <!-- Privacy Promise -->
        <androidx.cardview.widget.CardView
            style="@style/Card.Catamaran">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🛡️ Our Privacy Promise"
                    android:textAppearance="@style/TextAppearance.Catamaran.Title"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your privacy is our top priority. We built Catamaran to protect you from scams while keeping your personal information completely safe."
                    android:textAppearance="@style/TextAppearance.Catamaran.Body"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✅ We NEVER read your text messages\n✅ We NEVER listen to your phone calls\n✅ We NEVER share your information with advertisers\n✅ Only YOU control who sees your activity"
                    android:textAppearance="@style/TextAppearance.Catamaran.Body"
                    android:textColor="@color/status_active"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- What We See -->
        <androidx.cardview.widget.CardView
            style="@style/Card.Catamaran">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="👀 What We Can See"
                    android:textAppearance="@style/TextAppearance.Catamaran.Title"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="For Calls:"
                    android:textAppearance="@style/TextAppearance.Catamaran.Body"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• When someone called you\n• How long the call lasted\n• If it was from someone in your contacts\n\nWe NEVER hear what you talked about."
                    android:textAppearance="@style/TextAppearance.Catamaran.Body"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="2dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="For Text Messages:"
                    android:textAppearance="@style/TextAppearance.Catamaran.Body"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• How many messages you received\n• When you received them\n• If they were from someone in your contacts\n\nWe NEVER read what the messages say."
                    android:textAppearance="@style/TextAppearance.Catamaran.Body"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- How We Protect You -->
        <androidx.cardview.widget.CardView
            style="@style/Card.Catamaran">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🔒 How We Protect Your Information"
                    android:textAppearance="@style/TextAppearance.Catamaran.Title"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Encryption: All your information is scrambled so only you and your family can understand it.\n\n2. Secure Storage: Your data is stored safely on your phone and our secure servers.\n\n3. Limited Access: Only you can decide which family members see your activity.\n\n4. No Selling: We never sell your information to anyone. Ever."
                    android:textAppearance="@style/TextAppearance.Catamaran.Body"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Your Control -->
        <androidx.cardview.widget.CardView
            style="@style/Card.Catamaran">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚙️ You're Always in Control"
                    android:textAppearance="@style/TextAppearance.Catamaran.Title"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Turn off monitoring anytime\n• Add or remove family members\n• Choose what to share\n• Delete your data completely\n\nYou decide everything. We just help keep you safe."
                    android:textAppearance="@style/TextAppearance.Catamaran.Body"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="If you have questions about your privacy, you can always call or email us for help."
                    android:textAppearance="@style/TextAppearance.Catamaran.Body"
                    android:textStyle="italic"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView> 