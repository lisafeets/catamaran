<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="👨‍👩‍👧‍👦"
        android:textSize="48sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No family members added yet"
        android:textAppearance="@style/TextAppearance.Catamaran.Title"
        android:gravity="center"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add a family member above to start sharing your activity updates with them."
        android:textAppearance="@style/TextAppearance.Catamaran.Body"
        android:gravity="center"
        android:textColor="@color/text_secondary" />

</LinearLayout> 