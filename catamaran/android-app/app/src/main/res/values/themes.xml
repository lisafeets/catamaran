<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CatamaranFamilySafety" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/success_green</item>
        <item name="colorSecondaryVariant">@color/start_green</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Background color -->
        <item name="android:windowBackground">@color/background_light</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <!-- Action bar -->
        <item name="actionBarStyle">@style/CustomActionBar</item>
    </style>
    
    <!-- Custom Action Bar Style -->
    <style name="CustomActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:background">@color/primary_blue</item>
        <item name="titleTextStyle">@style/ActionBarTitle</item>
    </style>
    
    <!-- Action Bar Title Style -->
    <style name="ActionBarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Large Button Style -->
    <style name="LargeButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <!-- Secondary Button Style -->
    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">70dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources> 